{
  "name": "void",
  "displayName": "Void",
  "description": "A simple TypeScript playground",
  "repository": "https://github.com/Puszkarek/void-vs-code-extension",
  "publisher": "Puszkarek",
  "icon": "assets/icon.png",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "void.runInCurrent",
        "title": "Void: Enter the Void (Current File)"
      },
      {
        "command": "void.createNew",
        "title": "Void: Summon Fresh Void (New File)"
      }
    ],
    "configuration": {
      "title": "Void",
      "properties": {
        "void.debounce": {
          "type": "number",
          "default": 300,
          "description": "Delay in milliseconds before running the playground after typing."
        },
        "void.tsconfigPath": {
          "type": "string",
          "default": null,
          "description": "Path to tsconfig.json. If null, tries to find it automatically."
        },
        "void.truncateLength": {
          "type": "number",
          "default": 40,
          "description": "Maximum length of the output decoration text."
        },
        "void.decoration.color": {
          "type": "string",
          "default": "editorCodeLens.foreground",
          "description": "Color of the inline decoration. Can be a hex code or a VS Code ThemeColor ID."
        },
        "void.decoration.opacity": {
          "type": "string",
          "default": "1",
          "description": "CSS opacity of the inline decoration."
        },
        "void.decoration.fontStyle": {
          "type": "string",
          "default": "italic",
          "description": "CSS font-style of the inline decoration (e.g., 'italic', 'normal')."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.0",
    "eslint": "^9.39.2",
    "prettier": "3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "esbuild": "^0.25.0",
    "rxjs": "^7.8.2"
  }
}
